@import "compass/reset";
@import "compass/css3/images";
@import "compass/css3/border-radius";
@import "compass/css3/opacity";
@import "compass/utilities/general/clearfix";
@import "compass/typography/text/replacement";
@import "compass/typography/lists/horizontal-list";

/* FONT */
@import url(http://fonts.googleapis.com/css?family=Poiret+One|Roboto:400,300,500,700,300italic,400italic,500italic|Julius+Sans+One);

/* COLORS */
$red: #70261c;

/* DEFAULT */

body {
	font-family: 'Roboto';
}

h2 {
	font-family: 'Poiret One';
}

header, .content {
	width: 1000px;
	margin: 0 auto;
}

article {
	width: 1000px;
	margin-bottom: 100px;

	.content {
		width: 900px;
		padding: 35px 50px;
	}
}

/* HEADER */

header {
	height: 667px;
	background-image: url('<%= asset_path("background-header.jpg") %>');
	position: relative;

	h1 {
		padding-top: 270px;
		@include replace-text-with-dimensions('logo.png', 50%, 50%, true);
	}

	nav {
		width: 1000px;
		padding: 21px 0px;
		float: left;
		background-color: $red;
		position: absolute;
		top: 520px;

		ul {
			width: 100%;
			margin: 5px 0px 0px 35px;

			li {
				display: inline-block;

				a {
					font-family: 'Julius Sans One';
					color: white;
					font-size: 1.5em;
					font-weight: 300;
					text-decoration: none;
					padding: 0px 50px 10px 10px;
				}

				a:hover, a.active {
				}
			}
		}
	}

	.navfixed {
		position: fixed;
		top: 0px;
		z-index: 100;
	}

	.gradient {
		width: 1000px;
		height: 10px;
		position: absolute;
		top: 591px;
		@include opacity(0.5);
		@include background-image(linear-gradient(#838383, #f9f9f9));
	}

	.gradient-fixed {
		position: fixed;
		top: 71px;
		z-index: 100;
	}
}

/* MAIN */

.gradient-wood {
	width: 50px;
	height: 1000px;
	position: absolute;
	top: -667px;
	z-index: 100;
}

.gradient-left {
	left: -50px;
	@include background-image(linear-gradient(to left, #cac9c9, #e6e5e4, #fff));
}

.gradient-right {
	right: -50px;
	@include background-image(linear-gradient(to right, #cac9c9, #e6e5e4, #fff));
}

section#main {
	width: 999px;
	height: 1800px;
	background-image: url('<%= asset_path("background-wood.png") %>');
	position: relative;
	margin-right: 0px !important;


/* SLIDER */

	#sliders {
	  height: 600px;
	  position: relative;

	  .slider_balls {
	    position: absolute;
	    float: right;
	    bottom: 30px;
	    right: 20px;
	    z-index: 50;

	    ul {
	      @include horizontal-list(5px);

	      a {
	        display: block;
	        width: 20px;
	        height: 20px;
	        background-color: grey;
	        @include border-radius(10px, 10px);
	        z-index: 50;
	      }

	      .ball.active a, a:hover {
	        background-color: $red;
	      }
	    }
	  }

	  .slider {
	    height: 643px;
	    position: relative;
	    overflow: hidden;

	    img {
	      height: 600px;
	      width: 1000px;
	      top: 0px;
	      left: 0px;
	      position: absolute;
	      display: none;

	      &:first-child {
	        display: block;
	      }
	    }
	  }
	}

/* PRESENTATION */

	#presentation {
		height: 313px;
		position: absolute;
		top: 240px;

		.fill-title {
			width: 435px;
			height: 70px;
			position: relative;
			top: 60px;
			left: -50px;
			background-color: white;
			@include opacity(0.5);
			z-index: 8;
		}

		.fill-text {
			width: 695px;
			height: 130px;
			position: relative;
			top: 20px;
			left: -50px;
			background-color: white;
			@include opacity(0.5);
			z-index: 8;
		}

		h2 {
			position: relative;
			font-size: 3em;
			color: $red;
			margin-bottom: 20px;
			z-index: 10;
		}

		p {
			width: 600px;
			position: relative;
			top: -89px;
			line-height: 23px;
			font-weight: 300;
			z-index: 10;
		}
	}

/* PROMOTION */

	#promotion {
		height: 200px;
		background-color: $red;

		h2 {
			color: white;
			font-size: 3em;
			margin-bottom: 20px;
		}

		p {
			color: white;
			font-size: 1.5em;
		}
	}


/* PRESTATIONS */

	#prestations {
		h2 {
			font-size: 3em;
			color: $red;
			margin-bottom: 20px;
		}

		.prestation {
		  ul {
		    li {
		    	width: 600px;
		      overflow: hidden;
		      border: 3px solid $red;
		      color: $red;
		      padding: 10px 10px;
		      margin-top: 10px;
		      cursor: pointer;

		      .price {
		        font-weight: normal;
		        float: right;
		        margin-right: 10px;
		        color: black;
		      }

		      .more {
		        height: 10px;
		        font-size: 1em;
		        font-weight: bold;
		        color: $red;
		        float: right;

		        a.more_link {
		          text-decoration: none;
		        }
		      }

		      .container {
		        width: 550px;
		        padding: 10px 10px;
		        display: none;

		        p {
		          font-size: 1em;
		          font-weight: normal;
		          margin-bottom: 10px;
		        }

		        .bold {
		        	color: black;
		          font-weight: 400;
		        }
		      }
		    }
		  }
		}

		.man-woman {
			h3 {
				color: $red;
				font-size: 1.4em;
			}
		}

		.woman {
			margin-top: 40px;

			h3 {
				color: $red;
				font-size: 1.4em;
			}
		}

		.man {
			margin-top: 40px;

			h3 {
				color: $red;
				font-size: 1.4em;
			}
		}
	}
}
